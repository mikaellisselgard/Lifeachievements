<div id="highscore-container" class="highscore-content medium-12 medium-centered large-12 large-centered columns">
    <% @user_stats.each_with_index do |user, index| %>
        <div class="highscores">
			<div class="highscore_position">
			<h3>Score: <%= user[2] %></h3>
		    <h2><%= (index + 1) %><h2>
			</div>
			<div class="highscore_user">
				<%= image_tag user[0].avatar, size: "100" %>
    			<h3><%= link_to user[0].name, user_path(user[0]) %></h3>
            </div>
            <div class="highscore_stats">
				Intjänade Achievements: <%= user[1] %><br>
				Total poäng: <%= user[2]%><br><br>
            </div>
		</div>
	<% end %>
</div>