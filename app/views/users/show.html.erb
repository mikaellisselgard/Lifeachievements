<div class="medium-8 medium-centered large-8 large-centered columns">
	<div id="user-container" class="media-container">
		<div class="user-avatar">
			<% if @user.avatar.length > 0 %>
				<%= image_tag @user.avatar, width: 280, height: 175 %>
				<% if @user == current_user %>
					<%= link_to 'Ändra profilbild', edit_user_path(@user), class: 'button success radius expand' %><br>
				<% else %>
					<% if current_user.following?(@user)%>
						<%= link_to 'Sluta följ användare', user_unfollow_path(@user), method: :put, class: 'button success radius expand'%>
					<% else %>
						<%= link_to 'Följ användare', user_follow_path(@user), method: :put, class: 'button success radius expand'%>
					<% end %>
				<% end %>
			<% else %>
				<%= image_tag 'avatar.png', width: 280, height: 175 %>
				<% if @user == current_user %>
					<%= link_to 'Lägg till profilbild', edit_user_path(@user), class: 'button success radius expand' %><br>
				<% else %>
					<% if current_user.following?(@user)%>
						<%= link_to 'Sluta följ användare', user_unfollow_path(@user), method: :put, class: 'button success radius expand'%>
					<% else %>
						<%= link_to 'Följ användare', user_follow_path(@user), method: :put, class: 'button success radius expand'%>
					<% end %>
				<% end %>
			<% end %>
		</div>
		<div class="user-info">
			<% if @user.medals %>
				<% @user.medals.each do |medal| %>
					<%= image_tag 'medal.png', width:50, height: 50 %>
				<% end %>
			<% end %>
		</div>
	</div>
</div>
<div class="medium-12 medium-centered large-12 large-centered columns">
	<div id="masonry-container" class="transitions-enabled infinite-scroll clearfix media-container">
		<%= render @posts %>
	</div>
</div>
<div class="load-more-container medium-4 centered">
        <!-- hide our loading gif image so that we show it when making ajax call via jquery -->
	<%= image_tag "loading-gif.gif", style: "display:none;", class: "loading-gif" %>
	<%= link_to "Load More", posts_path(user: @user), class: "load-more button expand" %>
</div>
