<div class="medium-8 medium-centered large-8 large-centered columns">
	<div id="user-container">
		<div class="user-avatar">
			<% if @user.avatar.length > 0 %>
				<%= image_tag @user.avatar, width: 280, height: 175 %>
				<%= link_to 'Change profile-picture', edit_user_path(@user), class: 'button success radius expand' %><br>
			<% else %>
				<%= image_tag 'avatar.png', width: 280, height: 175 %>
				<%= link_to 'Add profile-picture', edit_user_path(@user), class: 'button success radius expand' %><br>
			<% end %>
		</div>
		<div class="user-info">
			<%= @user.name %>
		</div>
	</div>
</div>
<div class="medium-12 medium-centered large-12 large-centered columns marginfix">
	<div id="masonry-container" class="transitions-enabled infinite-scroll clearfix">
	  <% @user.posts.each do |post| %>
	  <div class="box col3">
	  	<div class="post_user">
			<%= link_to image_tag(post.user.avatar, width: "30px", height: "30px"), user_path(post.user)%>
			<h3><%= link_to post.user.name, user_path(post.user) %></h3>
		</div>
		<div class="post_image" height="<%= post.height %>px!important">
			<%= image_tag(post.image, width: post.width, height: post.height) %><br>
		</div>
		<div class="post_info">
			<p>Achievement: <%= link_to post.achievement.description, achievement_path(post.achievement) %></p>
	     	<p>Meddelande: <%= post.message %></p><br><br>
		</div>
	 </div>
	 <% end %>
	</div>
</div>