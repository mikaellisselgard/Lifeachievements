<% if current_user.follows.count > 0 %>
	<% current_user.follows.each do |follow| %>
		<!-- follow.followable to get the users you follow -->
		<%= image_tag(follow.followable.avatar, size: '30') %>
		<%= follow.followable.name %>	
		<%= link_to 'Tipsa', user_tip_path(follow.followable, achievement: achievement), class: 'button tiny success tip-button', method: :post %>
		<hr class="popup-hr">
	<% end %>
<% else %>
	Du följer ingen ännu.
<% end %>
