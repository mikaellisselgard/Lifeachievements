<div class="medium-8 medium-centered large-8 large-centered columns registration">
  <h2 class="text-center white-text">Bli medlem!</h2>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>
    <!-- Avoid Chrome autofill -->
    <input class="hide" style="display:none">
    <input type="password" class="hide" style="display:none">
    <div class="field join-form-input">
      <%= f.email_field :email, autocomplete: "off", placeholder: 'E-postadress' %>
    </div>
    <div class="field join-form-input">
      <%= f.text_field :name, autocomplete: "off", placeholder: 'Användarnamn' %>
    </div>
    <div class="field join-form-input">
      <%= f.password_field :password, autocomplete: "off", placeholder: 'Lösenord' %>
    </div>
    <div class="actions join-form-input">
      <%= f.submit "Registrera", class: 'button success expand join-button' %>
    </div>
    <a href="#" id="sign_in">Logga in</a>
  <% end %>
</div>

<div class="medium-8 medium-centered large-8 large-centered columns login">
  <h2 class="text-center white-text">Logga in</h2>
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field join-form-input">
      <%= f.email_field :email, placeholder: 'E-postadress' %>
    </div>
    <div class="field join-form-input">
      <%= f.password_field :password, autocomplete: "off", placeholder: 'Lösenord' %>
    </div>
    <div class="actions join-form-input">
      <%= f.submit "Logga in", class: 'button success expand join-button' %> 
    </div>
    <a href="#" id="register">Registrera</a>
  <% end %>
</div>