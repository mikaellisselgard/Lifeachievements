<div class="medium-8 medium-centered large-8 large-centered columns">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>
    <!-- Avoid Chrome autofill -->
    <input class="hide" style="display:none">
    <input type="password" class="hide" style="display:none">
    <div class="field join-form-input">
      <%= f.email_field :email, autocomplete: "off", placeholder: 'E-postadress' %>
    </div>
    <div class="field join-form-input">
      <%= f.password_field :password, autocomplete: "off", placeholder: 'LÃ¶senord' %>
    </div>

    <div class="actions join-form-input">
      <%= f.submit "Registrera", class: 'button success expand join-button' %>
    </div>
  <% end %>
</div>
