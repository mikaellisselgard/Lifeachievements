<div class="medium-8 medium-centered large-8 large-centered columns">
	<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
	  <div class="field">
	    <%= f.label "E-postadress", class: 'body-text' %>
	    <%= f.email_field :email %>
	  </div>

	  <div class="field">
	    <%= f.label 'Lösenord', class: 'body-text' %>
	    <%= f.password_field :password, autocomplete: "off" %>
	  </div>

	  <% if devise_mapping.rememberable? -%>
	    <div class="field">
	      <%= f.check_box :remember_me %>
	      <%= f.label 'Kom ihåg mig', class: 'body-text' %>
	    </div>
	  <% end -%>

	  <div class="actions">
	    <%= f.submit "Logga in", class: 'button success radius expand' %>
	  </div>
	<% end %>

	<%= render "devise/shared/links" %>
</div>


