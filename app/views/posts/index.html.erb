<h1>Listing posts</h1>

<table width="50%">
  <thead>
    <tr>
      <td>image_url</td>
	  <td>messsage</td>
	  <td>user</td>
	  <td>achievement</td>
	  <td>link</td>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.image %></td>
        <td><%= post.message %></td>
		<td><%= post.user.name %></td>
		<td><%= post.achievement.description %></td>
		<td><%= link_to 'Show', post_path(post)%>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New post', new_post_path, class: 'button success radius expand' %><br>
